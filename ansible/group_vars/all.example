# Пример файла переменных
# Скопируйте этот файл в all.yml и замените значения на свои

xui_image: metaligh/3x-ui:latest
xui_web_port: "54321"
xui_ssl_path: "/etc/x-ui/ssl"
xui_install_dir: "/opt/x-ui"

prometheus_image: prom/prometheus:latest
prometheus_port: "9090"
prometheus_data_dir: "/opt/prometheus/data"

grafana_image: grafana/grafana-enterprise:latest
grafana_port: "3000"
grafana_admin_password: "admin"
grafana_data_dir: "/opt/grafana/data"

node_exporter_image: prom/node-exporter:latest
node_exporter_port: "9100"

timezone: "Europe/Moscow"
monitoring_install_dir: "/opt/monitoring"
